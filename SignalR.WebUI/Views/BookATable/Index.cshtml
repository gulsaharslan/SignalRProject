@model CreateBookingDto

@{
    Layout = null;
}


<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarComponentPartial")

    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Rezervasyon Oluşturun
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form method="post" action="/BookATable/Index/">
                            <div>
                                <input type="text" class="form-control" hidden placeholder="Adınız Soyadınız" asp-for="Description" />

                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Telefon Numaranız" asp-for="Phone" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="Mail" />
                                <span asp-validation-for="Mail" class="text-danger"></span>
                            </div>
                            <div>
                                <select asp-for="PersonCount" class="form-control nice-select wide">
                                    <option value="" disabled selected>
                                        Kaç Kişisiziniz?
                                    </option>
                                    <option value="1">
                                        1
                                    </option>
                                    <option value="2">
                                        2
                                    </option>
                                    <option value="3">
                                        3
                                    </option>
                                    <option value="4">
                                        4
                                    </option>
                                    <option value="5">
                                        5
                                    </option>
                                    <option value="6">
                                        6++
                                    </option>
                                </select>
                                <span asp-validation-for="PersonCount" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="date" required class="form-control" asp-for="Date">
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="btn_box">
                                <button type="submit" style="background-color:plum">
                                    Yerinizi Ayırtın
                                </button>
                            </div>
                          
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container ">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d28640.12922214551!2d28.776172481137262!3d41.016006198684515!3m2!1i1024!2i768!4f13.1!5e0!3m2!1str!2str!4v1732024554170!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")

    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")

</body>

</html>