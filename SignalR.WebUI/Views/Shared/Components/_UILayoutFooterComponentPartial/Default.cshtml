﻿
@model List<ResultContactDto>

@foreach(var item in Model){
<footer class="footer_section">
    <div class="container">
        <div class="row">
            <div class="col-md-4 footer-col">
                <div class="footer_contact">
                    <h4>
                        Bize Ulaşın
                    </h4>
                    <div class="contact_link_box">

                            <span class="fa fa-map-marker mb-2" aria-hidden="true">&nbsp;&nbsp;@item.Location</span>

                            <span class="fa fa-phone mb-2" aria-hidden="true"> &nbsp;&nbsp; @item.Phone</span>
                            <span class="fa fa-envelope" aria-hidden="true"> &nbsp;&nbsp;@item.Mail</span>
                            
                  
                    </div>
                </div>
            </div>
            <div class="col-md-4 footer-col">
                <div class="footer_detail">
                    <a href="/Default/Index/" class="footer-logo">
                        @item.FooterTitle
                    </a>
                    <p>
                        @item.FooterDescription
                    </p>
                        @await Component.InvokeAsync("_UILayoutSocialMediaComponentPartial")
                </div>
            </div>
            <div class="col-md-4 footer-col">
                <h4>
                    @item.OpenDays
                </h4>
                <p>
                    @item.OpenDaysDescription
                </p>
                <p>
                    @item.OpenHours
                </p>
            </div>
        </div>
        <div class="footer-info">
            <p>
                &copy; <span id="displayYear"></span> Tüm Hakları Saklıdır.
                <a href="https://html.design/">SignalR Restoran</a><br><br>
                &copy; <span id="displayYear"></span> Geliştiren
                <a href="https://themewagon.com/" target="_blank">GAO</a>
            </p>
        </div>
    </div>
</footer>
}